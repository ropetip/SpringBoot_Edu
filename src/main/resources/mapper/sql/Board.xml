<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.accountbook.mvc.repository.BoardRepository">
	<select id="getList" parameterType="com.accountbook.mvc.domain.Board" resultType="com.accountbook.mvc.domain.Board">
		SELECT B.BOARD_SEQ
 				 , B.BOARD_TYPE
		         , B.TITLE
		         , B.CONTENTS
		         , B.REG_DATE
		 FROM T_BOARD B
		 ORDER BY B.REG_DATE DESC
	</select>
	
	<select id="get" parameterType="com.accountbook.mvc.domain.Board" resultType="com.accountbook.mvc.domain.Board">
		SELECT B.BOARD_SEQ
			  	 , B.BOARD_TYPE
		         , B.TITLE
		         , B.CONTENTS
		         , B.REG_DATE
		 FROM T_BOARD B
		 WHERE B.BOARD_SEQ = #{boardSeq}
		 ORDER BY B.REG_DATE DESC
	</select>
	
	<insert id="insert" parameterType="com.accountbook.mvc.parameter.BoardParameter" useGeneratedKeys="true" keyProperty="boardSeq">
		INSERT INTO T_BOARD
		(
			BOARD_TYPE
			,TITLE
			,CONTENTS
			,REG_DATE 
		)
		VALUES(
			 #{boardType}
			,#{title}
			,#{contents}
			,sysdate()
		)
	</insert>
	
	<update id="update" parameterType="com.accountbook.mvc.domain.Board">
		UPDATE T_BOARD
		SET TITLE = #{title}
			,CONTENTS = #{contents}
		WHERE BOARD_SEQ = #{boardSeq}	
	</update>
	
	<delete id="delete" parameterType="com.accountbook.mvc.domain.Board">
		DELETE
		FROM T_BOARD
		WHERE BOARD_SEQ = #{boardSeq}	
	</delete>
	
	<insert id="saveList" parameterType="map">
		INSERT INTO T_BOARD
		(
			TITLE
			,CONTENTS
			,REG_DATE 
		)
		VALUES
		<foreach collection="boardList" item="board" separator=",">
		(
			#{board.title}
			,#{board.contents}
			,sysdate()	
		)
		</foreach>
	</insert>
	
</mapper>